extends template.pug

block title
  title= topic

block content
  div.container.mt-5.mb-5
    h1
      span.badge.badge-danger= topic
    div.card.card-body.border.border-danger
      h4= message
      div.text-right
        form(action= "/addliketopic" method= "post")
          input(type="hidden" name="id" value= id)
          button.like
        h6= `${likes} likes.`
      h5.text-right= `by ${user}`
    hr
    h2 Comments
    each comment, index in comments
      div.card.card-body.m-2
        h4= comment.message
        div.text-right
          form(action= "/addlikecomment" method= "post")
            input(type="hidden" name="id" value= id)
            input(type="hidden" name="commentid" value= index)
            button.like
          h6= `${comment.likes} likes.`
          h5= `By ${comment.user}`
    hr
    h2 Add Comment
    form(action= "/addcomment" method= "post")
      input(type="hidden" name="id" value= id)
      input.m-2.input(name= "user" placeholder= "Username")
      br
      textarea.m-2.input(name= "message" placeholder= "Your message")
      br
      button.btn.btn-outline-danger.btn-block.m-2(type= "submit") COMMENT

    
